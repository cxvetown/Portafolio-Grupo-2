<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Button.Static.Background" Color="#FF202020" />
    <SolidColorBrush x:Key="Button.Static.Border" Color="#FFAAAAAA" />
    <SolidColorBrush x:Key="Button.Static.Foreground" Color="#FFEAEAEA" />
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FF323232" />
    <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF909090" />
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FF444444" />
    <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF838383" />
    <SolidColorBrush x:Key="Button.Focused.Border" Color="Orange" />
    <SolidColorBrush x:Key="Content.Background" Color="#FF000000" />

</ResourceDictionary>